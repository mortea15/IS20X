    <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="15.0">
      <children>
        <Label id="Header" alignment="CENTER" maxHeight="27.0" maxWidth="150.0" minHeight="27.0" minWidth="150.0" prefHeight="27.0" prefWidth="150.0" text="SLIT | UiA" textAlignment="CENTER">
